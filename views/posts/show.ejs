<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Blog post details - BlogNova">
  <title><%= typeof post.title !== 'undefined' ? post.title : 'Post Details - BlogNova' %></title>
  
  <!-- Favicon -->
  <link rel="icon" href="/images/Logo.png">
  
  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;700&display=swap" rel="stylesheet">
  
  <!-- CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="/style/style.css">

</head>

<body>
  <!-- Header with Navigation -->
  <%- include('../includes/nav.ejs') %>
  <%- include('../includes/bgDesign.ejs') %>
  <!-- Main Content -->
  <main>
    <div class="content-container">
      <div class="post-container">
        <div class="post-header">
          <h1 class="post-title"><%= post.title %></h1>
          <div class="post-meta">
            <span><i class="fas fa-user"></i> <%= post.name %></span>
            <span><i class="fas fa-calendar"></i> <%= new Date(post.date).toLocaleDateString("en-US", { month: 'short', day: 'numeric', year: 'numeric' }) %></span>            <!-- <% if (post.category) { %>
            <span><i class="fas fa-tag"></i> <%= post.category %></span>
            <% } %> -->
          </div>
        </div>
        
        <% if (post.image) { %>
        <div class="post-image-container">
          <img src="<%= post.image %>" alt="<%= post.title %>" class="post-featured-image animate__animated animate__fadeIn">
          <% if (post.imageCaption) { %>
          <p class="image-caption"><%= post.imageCaption %></p>
          <% } %>
        </div>
        <% } %>
        <div class="post-description">
          <p><%= post.description %></p>
        </div>
        
        <% if (post.content) { %>
        <div class="post-content">
          <%- post.content %>
        </div>
        <% } %>
        
        <% if (post.gallery && post.gallery.length > 0) { %>
        <div class="post-gallery">
          <% post.gallery.forEach(function(image) { %>
          <div class="gallery-item">
            <img src="<%= image.url %>" alt="<%= image.caption || post.title %>" class="gallery-image" data-lightbox="gallery">
          </div>
          <% }); %>
        </div>
        <% } %>
        
        <% if(currUser && post.owner && currUser._id.equals(post.owner._id)){ %>
        <div class="post-actions">
          <a href="/posts/<%= post._id %>/edit" class="btn btn-outline">
            <i class="fas fa-edit"></i> Edit
          </a>
          <form action="/posts/<%= post._id %>?_method=DELETE" method="POST">
            <button class="btn btn-danger" type="submit">
              <i class="fas fa-trash"></i> Delete
            </button>
          </form>
        </div>
       <% } %>
      </div>
    </div>

    <% if(currUser ){ %>
    <div class="review-container">
      <h4 class="review-heading">Comments</h4>
      
      <form action="/posts/<%= post._id %>/reviews" method="POST" class="review-form">
        <div class="rating-container">
          <label for="rating" class="rating-label">Rating</label>
          <div class="star-rating">
            <input type="radio" id="star5" name="review[rating]" value="5" class="star-input" required />
            <label for="star5" class="star-label" title="5 stars">★</label>
            
            <input type="radio" id="star4" name="review[rating]" value="4" class="star-input" />
            <label for="star4" class="star-label" title="4 stars">★</label>
            
            <input type="radio" id="star3" name="review[rating]" value="3" class="star-input" />
            <label for="star3" class="star-label" title="3 stars">★</label>
            
            <input type="radio" id="star2" name="review[rating]" value="2" class="star-input" />
            <label for="star2" class="star-label" title="2 stars">★</label>
            
            <input type="radio" id="star1" name="review[rating]" value="1" class="star-input" />
            <label for="star1" class="star-label" title="1 star">★</label>
          </div>
          <span class="rating-validation-message" style="color: #f43f5e; display: none;">Please select a rating between 1 and 5 stars</span>
        </div>
        
        <div class="comment-container">
          <label for="comment" class="comment-label">Comments</label>
          <textarea name="review[comment]" id="comment" class="comment-input" required placeholder="Share your thoughts..."></textarea>
        </div>
        
        <button class="submit-button">Submit</button>
      </form>
      <% } %>
      <hr class="review-divider">
      
      <p class="all-reviews-heading"><b>All Reviews</b></p>
      
      <% for(review of post.reviews){ %>
        <div class="review-card">
          <div class="review-content">
            <h5 class="reviewer-name">@<%= review.author ? review.author.username : 'Unknown user' %></h5>
            <p class="review-text"><%= review.comment %></p>
            <div class="review-stars">
              <% for(let i = 0; i < review.rating; i++) { %>
                <span class="star filled">★</span>
              <% } %>
              <% for(let i = review.rating; i < 5; i++) { %>
                <span class="star empty">★</span>
              <% } %>
              <span class="rating-text"><%= review.rating %> stars</span>
            </div>
          </div>
          <% if(currUser && review.author && currUser._id.equals(review.author._id)) { %>
          <form action="/posts/<%= post._id%>/reviews/<%= review._id %>?_method=DELETE" method="post" class="delete-form">
            <button class="delete-button">Delete</button>
          </form>
          <% } %>
        </div>
      <% } %>
    </div>
    <style>
      /* Modern Color Scheme with Purple (#563988) Stars */
:root {
  --primary-color: #563988; /* Changed to your specified color */
  --primary-glow: rgba(86, 57, 136, 0.6); /* Changed to match primary */
  --secondary-color: #452c6b; /* Darker shade for gradient */
  --accent-color: #f43f5e;
  --background-color: #f8fafc;
  --card-background: #ffffff;
  --text-primary: #1e293b;
  --text-secondary: #64748b;
  --border-color: #e2e8f0;
  --star-color: #563988; /* Changed to your specified color */
  --star-glow: rgba(86, 57, 136, 0.7); /* Changed to match */
  --star-inactive: #cbd5e1;
}

/* Container Styles - Dramatically increased width */
.review-container {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  max-width: 1400px; /* Significantly increased from 1000px */
  margin: 0 auto;
  padding: 3rem; /* Increased padding */
  background-color: var(--background-color);
  color: var(--text-primary);
  border-radius: 12px;
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
  width: 90%;
}

/* Heading Styles */
.review-heading {
  font-size: 2rem; /* Increased size */
  font-weight: 700;
  margin-bottom: 1.75rem;
  color: var(--primary-color);
  position: relative;
}

.review-heading::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: -8px;
  height: 4px; /* Thicker underline */
  width: 80px; /* Wider underline */
  background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
  border-radius: 2px;
}

/* Form Styles */
.review-form {
  background-color: var(--card-background);
  padding: 2rem; /* Increased padding */
  border-radius: 8px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
  margin-bottom: 2.5rem;
}

/* Star Rating Styles - Larger stars */
.rating-container {
  margin-bottom: 1.5rem;
}

.rating-label {
  display: block;
  font-weight: 600;
  margin-bottom: 0.75rem;
  color: var(--text-primary);
  font-size: 1.1rem; /* Larger label */
}

.star-rating {
  display: flex;
  flex-direction: row-reverse;
  justify-content: flex-end;
  position: relative;
}

.star-input {
  display: none;
}

.star-label {
  font-size: 3rem; /* Much larger stars */
  color: var(--star-inactive);
  cursor: pointer;
  transition: all 0.2s ease;
  margin-right: 0.5rem; /* More space between stars */
}

.star-label:hover,
.star-label:hover ~ .star-label,
.star-input:checked ~ .star-label {
  color: var(--star-color);
  text-shadow: 0 0 15px var(--star-glow), 0 0 20px var(--star-glow); /* Stronger glow */
  transform: scale(1.15); /* Larger scale on hover */
}

/* Comment Field Styles - Much larger */
.comment-container {
  margin-bottom: 2rem;
}

.comment-label {
  display: block;
  font-weight: 600;
  margin-bottom: 0.75rem;
  color: var(--text-primary);
  font-size: 1.1rem; /* Larger label */
}

.comment-input {
  width: 100%;
  min-height: 200px; /* Much taller textarea */
  padding: 1rem; /* More padding */
  border: 1px solid var(--border-color);
  border-radius: 8px; /* Larger radius */
  background-color: white;
  font-family: inherit;
  font-size: 1.1rem; /* Larger text */
  resize: vertical;
  transition: all 0.2s ease;
}

.comment-input:focus {
  outline: none;
  border-color: var(--primary-color);
  box-shadow: 0 0 0 3px var(--primary-glow);
}

.comment-input::placeholder {
  color: var(--text-secondary);
}

/* Button Styles - Larger */
.submit-button {
  background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
  color: white;
  border: none;
  padding: 0.9rem 2rem; /* Larger button */
  font-size: 1.1rem; /* Larger text */
  font-weight: 600;
  border-radius: 8px; /* Larger radius */
  cursor: pointer;
  transition: all 0.2s ease;
  box-shadow: 0 4px 12px rgba(86, 57, 136, 0.3);
}

.submit-button:hover {
  transform: translateY(-3px);
  box-shadow: 0 6px 20px rgba(86, 57, 136, 0.4);
}

.submit-button:active {
  transform: translateY(0);
}

/* Divider */
.review-divider {
  border: none;
  height: 2px; /* Thicker divider */
  background-color: var(--border-color);
  margin: 2.5rem 0; /* More margin */
}

/* All Reviews Section */
.all-reviews-heading {
  font-size: 1.5rem; /* Larger heading */
  margin-bottom: 1.75rem;
  color: var(--text-primary);
  font-weight: 600;
}

/* Review Card Styles - Much wider content */
.review-card {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  background-color: var(--card-background);
  padding: 2rem; /* Much more padding */
  border-radius: 10px; /* Larger radius */
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.04);
  margin-bottom: 1.75rem; /* More space between cards */
  transition: transform 0.2s ease;
}

.review-card:hover {
  transform: translateY(-4px); /* More movement */
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
}

.review-content {
  flex: 1;
  padding-right: 3rem; /* More space for wider content */
}

.reviewer-name {
  font-size: 1.2rem; /* Larger name */
  font-weight: 600;
  margin: 0 0 0.75rem 0;
  color: var(--text-primary);
}

.review-text {
  margin: 0.75rem 0 1.25rem;
  color: var(--text-primary);
  line-height: 1.6;
  font-size: 1.05rem; /* Larger text */
}

/* Star Display Styles - Purple stars */
.review-stars {
  display: flex;
  align-items: center;
}

.star {
  font-size: 1.5rem; /* Larger stars */
  margin-right: 0.35rem;
}

.star.filled {
  color: var(--star-color);
  text-shadow: 0 0 8px var(--star-glow); /* More glow */
}

.star.empty {
  color: var(--star-inactive);
}

.rating-text {
  margin-left: 0.75rem;
  font-size: 1rem; /* Larger text */
  color: var(--text-secondary);
}

/* Delete Button Styles - Larger */
.delete-button {
  background-color: transparent;
  color: var(--accent-color);
  border: 1px solid var(--accent-color);
  padding: 0.6rem 1.25rem; /* Larger button */
  border-radius: 8px;
  font-size: 1rem; /* Larger text */
  cursor: pointer;
  transition: all 0.2s ease;
}

.delete-button:hover {
  background-color: var(--accent-color);
  color: white;
}

/* Responsive Adjustments */
@media (max-width: 992px) {
  .review-container {
    max-width: 100%;
    padding: 2rem;
  }
}

@media (max-width: 768px) {
  .review-container {
    padding: 1.5rem;
  }
  
  .review-card {
    flex-direction: column;
    padding: 1.5rem;
  }
  
  .review-content {
    padding-right: 0;
  }
  
  .delete-form {
    margin-top: 1.25rem;
    align-self: flex-end;
  }
  
  .star-label {
    font-size: 2.5rem;
  }
}
    </style>
  </main>

  <!-- Image Lightbox -->
  <div class="lightbox" id="lightbox">
    <span class="lightbox-close">&times;</span>
    <img class="lightbox-content" id="lightbox-image">
  </div>

  <!-- Footer -->
  <%- include('../includes/footer.ejs') %>

  <!-- JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
  <script src="/scripts/script.js">
    
  </script>
</body>
</html>